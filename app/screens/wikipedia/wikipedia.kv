#:import utils kivy.utils

<Wikipedia>:
    name: 'wikipedia'
    id: wikipediascreen
    md_bg_color: utils.get_color_from_hex('#475D66')
    FloatLayout:
        id: box_root
        size_hint: (1, 1)
        md_bg_color: utils.get_color_from_hex('#475D66')
        MDIconButton:
            icon: 'arrow-left-bold'
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            user_font_size: str((box_root.height/720)*80) + 'sp'
            width: self.height
            pos_hint: {'x': 0.09, 'y': 0.83}
            on_release:
                app.switch_screen('mainmenu', 'right')
        MDLabel:
            text: 'Wikipedia'
            font_name: resource_path(os.path.join('data', 'fonts', 'JetBrainsMono-Regular.ttf'))
            theme_text_color: 'Primary'
            halign: 'center'
            valign: 'middle'
            font_size: str((box_root.height/720)*60) + 'sp'
            pos_hint: {'y': 0.4}
        TextInput:
            id: searchbar
            font_name: resource_path(os.path.join('data', 'fonts', 'JetBrainsMono-Regular.ttf'))
            multiline: False
            size_hint: (0.6, 0.06)
            font_size: str((box_root.height/720)*30) + 'sp'
            pos_hint: {'x': 0.2, 'y': 0.7}
            foreground_color: 0, 0, 0, 1
            background_color: 133/255, 144/255, 149/255, 1
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
        MDIconButton:
            icon: 'magnify'
            user_font_size: str((box_root.height/720)*30) + 'sp'
            pos_hint: {'x': 0.805, 'y': 0.694}
            on_release:
                root.search(searchbar.text)
        TextInput:
            id: results
            font_name: resource_path(os.path.join('data', 'fonts', 'JetBrainsMono-Regular.ttf'))
            size_hint: (0.8, 0.6)
            font_size: str((box_root.height/720)*25) + 'sp'
            pos_hint: {'x': 0.1, 'y': 0.05}
            foreground_color: 0, 0, 0, 1
            background_color: 133/255, 144/255, 149/255, 1
            background_normal: ''
            readonly: True
