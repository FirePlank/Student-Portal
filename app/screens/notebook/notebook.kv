#:import utils kivy.utils
#:import Window kivy.core.window.Window

<Notebook>:
    name: 'notebook'
    id: notebookscreen
    md_bg_color: utils.get_color_from_hex('#475D66')
    FloatLayout:
        id: box_root
        size_hint: (1, 1)
        HoverIconButton:
            icon: 'arrow-left-bold'
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            user_font_size: str((box_root.height/720)*80) + 'sp'
            pos_hint: {'x': 0.09, 'y': 0.83}
            on_release:
                app.switch_screen('mainmenu', 'left')
                scroller.scroll_y = 1
        MDLabel:
            text: 'Notebook'
            font_name: app.resource_path(os.path.join('data', 'fonts', 'JetBrainsMono-Regular.ttf'))
            theme_text_color: 'Primary'
            halign: 'center'
            valign: 'middle'
            font_size: str((box_root.height/720)*60) + 'sp'
            pos_hint: {'y': 0.4}
        HoverIconButton:
            icon: 'plus-box-multiple'
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            user_font_size: str((box_root.height/720)*80) + 'sp'
            pos_hint: {'x': 0.8, 'y': 0.83}
        ScrollView:
            id: scroller
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#475D66')
                Rectangle:
                    pos: (self.x-5, self.y-5)
                    size: (self.width+10, self.height+10)
            do_scroll_x: False
            do_scroll_y: True
            scroll_distance: dp((box_root.height/720)*20)
            scroll_wheel_distance: dp((box_root.height/720)*30)
            size_hint: (0.8, 0.75)
            pos_hint: {'x': 0.1, 'y': 0.05}
            StackLayout:
                id: scroll_box
                size_hint: (1, None)
                height: self.minimum_height
                padding: dp(20)
                spacing: dp(20)
                Note:
                Note:
                Note:
                Note:
                Note:
                Note:

<Note@FloatLayout>:
    canvas.before:
        Color:
            rgba: 133/255, 144/255, 149/255, 1
        Rectangle:
            pos: (self.x, self.y)
            size: (self.width, self.height)
    size_hint: (1, None)
    height: Window.height/3
    TextInput:
        id: title
        font_name: app.resource_path(os.path.join('data', 'fonts', 'JetBrainsMono-Regular.ttf'))
        multiline: False
        size_hint: (0.5, 0.12)
        font_size: str((Window.height/720)*20) + 'sp'
        pos_hint: {'x': 0.02, 'y': 0.76}
        foreground_color: 0, 0, 0, 1
        background_color: 133/255, 144/255, 149/255, 1
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
    NoteButton:
        text: "EDIT"
        pos_hint: {'x': 0.55, 'y': 0.76}
    NoteButton:
        text: "DELETE"
        pos_hint: {'x': 0.675, 'y': 0.76}
    NoteButton:
        text: "RESET DATE"
        pos_hint: {'x': 0.8, 'y': 0.76}
    TextInput:
        id: content
        font_name: app.resource_path(os.path.join('data', 'fonts', 'JetBrainsMono-Regular.ttf'))
        size_hint: (0.96, 0.65)
        font_size: str((Window.height/720)*15) + 'sp'
        pos_hint: {'x': 0.02, 'y': 0.05}
        foreground_color: 0, 0, 0, 1
        background_color: 133/255, 144/255, 149/255, 1

<NoteButton@MDRectangleFlatButton>:
    font_name: app.resource_path(os.path.join('data', 'fonts', 'JetBrainsMono-Regular.ttf'))
    text_color: 0, 0, 0, 1
    md_bg_color: 1, 1, 1, 0
    font_size: str((Window.height/720)*20) + 'sp'
    size_hint: (None, 0.12)
