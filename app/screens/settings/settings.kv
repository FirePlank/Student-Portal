#:import Window kivy.core.window.Window
#:import Clipboard kivy.core.clipboard.Clipboard
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import toast kivymd.toast.toast


<Settings>:
    name: 'settings'
    id: settingsscreen
    md_bg_color: app.bg_color

    GridLayout:
        cols: 1
        id: box_root
        padding: dp(min(Window.height/720*20, Window.width/1280*20))
        spacing: dp(20*Window.height/720)

        BoxLayout:
            size_hint: (1, 0.2)

            AnchorLayout:

                HoverIconButton:
                    icon: app.home_icon
                    tooltip_text: app.home_icon_tooltip
                    theme_text_color: 'Custom'
                    text_color: app.title_text_color
                    user_font_size: str((Window.height/720)*80) + 'sp'
                    on_release:
                        app.switch_screen('mainmenu', 'right')
                        self.canvas_opacity = 0
                        scroller.scroll_y = 1
                        Window.remove_widget(self.tooltip)

            MDLabel:
                text: 'Settings'
                font_name: app.app_font
                theme_text_color: 'Custom'
                text_color: app.title_text_color
                halign: 'center'
                valign: 'middle'
                font_size: str((Window.height/720)*60) + 'sp'

            AnchorLayout:

        AnchorLayout:
            size_hint: (1, 0.75)

            CustomScroll:
                size_hint: (0.9, 1)
                id: scroller
                smooth_scroll_end: 10
                bar_width: 10
                scroll_type: ['bars']
                bar_inactive_color: self.bar_color
                effect_cls : 'ScrollEffect'
                scroll_distance: dp((Window.height/720)*20)
                scroll_wheel_distance: dp((Window.height/720)*30)

                StackLayout:
                    id: scroll_box
                    size_hint: (1, None)
                    height: self.minimum_height
                    padding: dp(15), 0
                    spacing: dp((Window.height/720)*20)

                    MDGridLayout:
                        cols: 1
                        size_hint_y: None
                        height: self.minimum_height
                        md_bg_color: app.tile_color
                        padding: dp(10)
                        spacing: dp((Window.height/720)*20)

                        TextInput:
                            text: 'Appearance'
                            size_hint: 1, None
                            height: self.minimum_height
                            font_name: app.app_font
                            font_size: str(min(Window.height/720*40, Window.width/720*40)) + 'sp'
                            background_color: (0, 0, 0, 0)
                            background_disabled_normal: ''
                            disabled_foreground_color: app.text_color
                            disabled: True

                        GridLayout:
                            id: appearance_settings
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
                            spacing: dp((Window.height/720)*20)

                            GridLayout:
                                cols: 3
                                size_hint_y: None
                                height: self.minimum_height

                                TextInput:
                                    text: 'App theme'
                                    size_hint: 1, None
                                    height: self.minimum_height
                                    font_name: app.app_font
                                    font_size: str(min(Window.height/720*25, Window.width/720*25)) + 'sp'
                                    background_color: (0, 0, 0, 0)
                                    background_disabled_normal: ''
                                    disabled_foreground_color: app.text_color
                                    disabled: True

                                AnchorLayout:
                                    id: theme

                                AnchorLayout:

                            GridLayout:
                                cols: 3
                                size_hint_y: None
                                height: self.minimum_height

                                TextInput:
                                    text: 'Screen transition'
                                    size_hint: 1, None
                                    height: self.minimum_height
                                    font_name: app.app_font
                                    font_size: str(min(Window.height/720*25, Window.width/720*25)) + 'sp'
                                    background_color: (0, 0, 0, 0)
                                    background_disabled_normal: ''
                                    disabled_foreground_color: app.text_color
                                    disabled: True

                                AnchorLayout:
                                    id: transition

                                AnchorLayout:

                    MDGridLayout:
                        cols: 1
                        size_hint_y: None
                        height: self.minimum_height
                        md_bg_color: app.tile_color
                        padding: dp(10)
                        spacing: dp((Window.height/720)*20)

                        TextInput:
                            id: history_label
                            text: 'History'
                            size_hint: 1, None
                            height: self.minimum_height
                            font_name: app.app_font
                            font_size: str(min(Window.height/720*40, Window.width/720*40)) + 'sp'
                            background_color: (0, 0, 0, 0)
                            background_disabled_normal: ''
                            disabled_foreground_color: app.text_color
                            disabled: True

                        GridLayout:
                            cols: 2
                            size_hint_y: None
                            height: history_label.height
                            padding: dp(10)
                            spacing: dp((Window.height/720)*20)

                            AnchorLayout:
                                HoverIconButton:
                                    icon: 'arrow-left-circle-outline'
                                    tooltip_text: 'Switch left'
                                    theme_text_color: 'Custom'
                                    text_color: app.title_text_color
                                    user_font_size: str((Window.height/720)*40) + 'sp'
                                    on_release:
                                        history_box.current = history_box.previous()

                            AnchorLayout:
                                HoverIconButton:
                                    icon: 'arrow-right-circle-outline'
                                    tooltip_text: 'Switch right'
                                    theme_text_color: 'Custom'
                                    text_color: app.title_text_color
                                    user_font_size: str((Window.height/720)*40) + 'sp'
                                    on_release:
                                        history_box.current = history_box.next()

                        ScreenManager:
                            id: history_box
                            size_hint: (1, None)
                            height: self.get_screen(self.current).height
                            transition: NoTransition()

                            Screen:
                                id: wikipedia_history_screen
                                name: 'wikipedia_history'
                                size_hint: (1, None)
                                height: wikipedia_history.height
                                HistoryView:
                                    id: wikipedia_history
                                    history_component: 'Wikipedia'

                            Screen:
                                id: youtube_history_screen
                                name: 'youtube_history'
                                size_hint: (1, None)
                                height: youtube_history.height
                                HistoryView:
                                    id: youtube_history
                                    history_component: 'Youtube'

                            Screen:
                                id: books_history_screen
                                name: 'books_history'
                                size_hint: (1, None)
                                height: books_history.height
                                HistoryView:
                                    id: books_history
                                    history_component: 'Books'


<HoverFlatButton>:
    font_name: app.app_font
    color: app.text_color
    background_normal: ''
    background_down: ''
    background_color: app.raised_button_color
    font_size: str(min(Window.height/720*20, Window.width/1000*20)) + 'sp'

<ChooseColors>:
    cols: 1
    size_hint_y: None
    height: self.minimum_height
    padding: dp(15), 0
    spacing: dp((Window.height/720)*20)

    ColorField:
        component: 'Bg color'
        display_color: app.bg_color

    ColorField:
        component: 'Tile color'
        display_color: app.tile_color

    ColorField:
        component: 'Button color'
        display_color: app.raised_button_color

    ColorField:
        component: 'Tile text color'
        display_color: app.text_color

    ColorField:
        component: 'Bg text color'
        display_color: app.title_text_color

    ColorField:
        component: 'Accent color'
        display_color: app.accent_color


<ColorField@GridLayout>:
    cols: 4
    size_hint_y: None
    height: self.minimum_height
    component: ''
    display_color: (0, 0, 0, 0)

    TextInput:
        text: root.component
        size_hint: 1, None
        height: self.minimum_height
        font_name: app.app_font
        font_size: str(min(Window.height/720*20, Window.width/1000*20)) + 'sp'
        background_color: (0, 0, 0, 0)
        background_disabled_normal: ''
        disabled_foreground_color: app.text_color
        disabled: True
        halign: 'left'

    AnchorLayout:

        Widget:
            id: color_tile
            size_hint_x: None
            width: self.height
            canvas:
                Color:
                    rgba: root.display_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            canvas.after:
                Color:
                    id: line_color
                    rgba: app.accent_color
                Line:
                    width: 2
                    rectangle: self.x-dp((Window.height/720)*2), self.y-dp((Window.height/720)*2), self.width+dp((Window.height/720)*4), self.height+dp((Window.height/720)*4)

    AnchorLayout:

        HoverFlatButton:
            text: 'Copy color'
            size_hint_x: 0.6
            on_release:
                Clipboard.copy(str([float(str(i)[:5]) for i in root.display_color]))
                toast('Color copied to clipboard', 0.4)

    AnchorLayout:
        HoverFlatButton:
            text: 'Edit'
            size_hint_x: 0.4
            on_release:
                root.parent.parent.parent.parent.parent.parent.parent.parent.edit_color(root.component, root.display_color)


<PopupColorPicker>:
    size: Window.size

    BoxLayout:
        padding: dp(15), 0
        spacing: dp((Window.height/720)*20)
        orientation: 'vertical'

        ColorPicker:
            id: picker
            size_hint_y: 0.9
            color: 0, 0, 0, 1

        GridLayout:
            cols: 2
            size_hint_y: 0.1

            AnchorLayout:

                HoverFlatButton:
                    size_hint_x: 0.8
                    text: 'Close'
                    on_release:
                        root.dismiss()

            AnchorLayout:

                HoverFlatButton:
                    size_hint_x: 0.8
                    text: 'Save'
                    on_release:
                        root.save_color()
                        root.dismiss()


<HistoryView>:
    cols: 1
    padding: dp(15), 0
    spacing: dp((Window.height/720)*20)
    size_hint_y: None
    height: self.minimum_height
    history_component: ''
    history: ''
    history_status: 1

    GridLayout:
        id: box_top
        cols: 3
        padding: dp(15), 0
        spacing: dp((Window.height/720)*20)
        size_hint_y: None
        height: self.minimum_height

        TextInput:
            text: root.history_component
            size_hint: 1, None
            height: self.minimum_height
            font_name: app.app_font
            font_size: str(min(Window.height/720*25, Window.width/1000*25)) + 'sp'
            background_color: (0, 0, 0, 0)
            background_disabled_normal: ''
            disabled_foreground_color: app.text_color
            disabled: True
            halign: 'center'

        AnchorLayout:

            HoverFlatButton:
                text: 'History: ON' if root.history_status else 'History: OFF'
                size_hint_x: 0.6
                on_release:
                    root.parent.parent.parent.parent.parent.parent.parent.parent.history_status(root)

        AnchorLayout:

            HoverFlatButton:
                text: 'Clear history'
                size_hint_x: 0.6
                on_release:
                    root.parent.parent.parent.parent.parent.parent.parent.parent.delete_history(root.history_component)
                    
    TextInput:
        id: box_bottom
        text: root.history
        size_hint_y: None
        height: self.minimum_height
        font_name: app.app_font
        font_size: str(min(Window.height/720*20, Window.width/1000*20)) + 'sp'
        background_color: app.tile_color
        background_disabled_normal: 'atlas://data/images/defaulttheme/textinput_active'
        disabled_foreground_color: app.text_color
        disabled: True
