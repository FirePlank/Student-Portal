#:import Window kivy.core.window.Window

<ToDo>:
    name: 'todo'
    id: todoscreen
    md_bg_color: app.bg_color
    FloatLayout:
        id: box_root
        MDLabel:
            text: 'To-do'
            font_name: app.app_font
            theme_text_color: 'Custom'
            text_color: app.title_text_color
            halign: 'center'
            valign: 'middle'
            font_size: str((Window.height/720)*60) + 'sp'
            pos_hint: {'y': 0.4}
        ScrollView:
            id: scroller
            smooth_scroll_end: 10
            bar_width: 10
            scroll_type: ['bars', 'content']
            bar_inactive_color: self.bar_color
            effect_cls : 'ScrollEffect'
            scroll_distance: dp((Window.height/720)*20)
            scroll_wheel_distance: dp((Window.height/720)*30)
            size_hint: (0.8, 0.75)
            pos_hint: {'x': 0.1, 'y': 0.05}
            StackLayout:
                id: scroll_box
                size_hint: (1, None)
                height: self.minimum_height
                padding: dp(20)
                spacing: dp(20)
        HoverIconButton:
            icon: 'arrow-left-bold'
            theme_text_color: 'Custom'
            text_color: app.title_text_color
            user_font_size: str((Window.height/720)*80) + 'sp'
            pos_hint: {'x': 0.09, 'y': 0.83}
            on_release:
                app.switch_screen('mainmenu', 'left')
                root.cleanup()
                scroller.scroll_y = 1
        HoverIconButton:
            icon: 'plus-box-multiple'
            theme_text_color: "Custom"
            text_color: app.title_text_color
            user_font_size: str((Window.height/720)*80) + 'sp'
            pos_hint: {'x': 0.8, 'y': 0.83}
            on_release:
                root.add_task()

<Task>:
    canvas.before:
        Color:
            rgba: app.tile_color
        Rectangle:
            pos: (self.x, self.y)
            size: (self.width, self.height)
    cols: 1
    size_hint: (1, None)
    height: self.minimum_height
    padding: dp(10*Window.height/720)
    spacing: dp(10*Window.height/720)
    TextInput:
        id: title
        font_name: app.app_font
        size_hint: (1, None)
        height: self.minimum_height
        font_size: str((Window.height/720)*20) + 'sp'
        foreground_color: app.text_color
        background_color: app.tile_color
        readonly: False
        cursor_color: app.accent_color
        cursor_blink: False
        cursor_width: app.cursor_width
        background_normal: 'atlas://data/images/defaulttheme/textinput_active'
        readonly: True
    GridLayout:
        cols: 3
        size_hint: (1, None)
        height: self.minimum_height
        spacing: dp(20*Window.width/1080)
        AnchorLayout:
            size_hint_y: None
            height: dp((Window.height/720)*25)
            HoverFlatButton:
                id: edit_button
                text: 'EDIT TASK'
                size_hint: (1, 1)
                on_release:
                    root.parent.parent.parent.parent.edit_task(root)
        BoxLayout:
            size_hint_y: None
            height: dp((Window.height/720)*25)
            spacing: dp(20*Window.width/1080)
            MDLabel:
                id: task_status
                text: 'Task done!' if root.status else 'Task remaining'
                font_name: app.app_font
                size_hint: (0.7, 1)
                theme_text_color: 'Custom'
                text_color: app.text_color
                valign: 'middle'
                halign: 'center'
                font_size: str(min((Window.height/720)*20, (Window.width/1080)*20)) + 'sp'
            HoverIconButton:
                id: task_status_button
                size_hint: (0.2, 1)
                icon: 'close-circle-outline' if root.status else 'check-circle-outline'
                theme_text_color: "Custom"
                text_color: app.text_color
                user_font_size: str((Window.height/720)*25) + 'sp'
                on_release:
                    root.parent.parent.parent.parent.update_status(root)
        AnchorLayout:
            size_hint_y: None
            height: dp((Window.height/720)*25)
            HoverFlatButton:
                id: delete_button
                text: 'DELETE TASK'
                size_hint: (1, 1)
                on_release:
                    root.parent.parent.parent.parent.delete_task(root)

<HoverFlatButton>:
    font_name: app.app_font
    color: app.text_color
    background_normal: ''
    background_down: ''
    background_color: app.raised_button_color
    font_size: str(min((Window.height/720)*18, (Window.width/1080)*18)) + 'sp'
